<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/border">

  <!-- Header -->
  <androidx.cardview.widget.CardView
    android:id="@+id/headerCard"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:padding="20dp">

      <!-- Title -->
      <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Automations"
        android:textColor="@color/text"
        android:textSize="20sp"
        android:textStyle="bold" />

      <!-- Action Icons -->
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Settings Icon -->
        <ImageView
          android:id="@+id/headerSettingsButton"
          android:layout_width="32dp"
          android:layout_height="32dp"
          android:src="@android:drawable/ic_menu_preferences"
          android:background="@drawable/circle_background_light"
          android:padding="6dp"
          app:tint="@color/text_secondary" />

        <!-- Bell Icon -->
        <ImageView
          android:id="@+id/headerBellButton"
          android:layout_width="32dp"
          android:layout_height="32dp"
          android:layout_marginStart="8dp"
          android:src="@android:drawable/ic_dialog_alert"
          android:background="@drawable/circle_background_light"
          android:padding="6dp"
          app:tint="@color/text_secondary" />

      </LinearLayout>

    </LinearLayout>

  </androidx.cardview.widget.CardView>

  <!-- Automation Stats -->
  <LinearLayout
    android:id="@+id/statsContainer"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="24dp"
    android:layout_marginBottom="24dp"
    android:orientation="horizontal"
    app:layout_constraintTop_toBottomOf="@id/headerCard"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <!-- Active Routines -->
    <androidx.cardview.widget.CardView
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_weight="1"
      app:cardBackgroundColor="@color/white"
      app:cardCornerRadius="12dp"
      app:cardElevation="4dp">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="3"
          android:textColor="@color/accent"
          android:textSize="24sp"
          android:textStyle="bold" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:text="Active Routines"
          android:textColor="@color/text_secondary"
          android:textSize="12sp" />

      </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Scheduled -->
    <androidx.cardview.widget.CardView
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_weight="1"
      app:cardBackgroundColor="@color/white"
      app:cardCornerRadius="12dp"
      app:cardElevation="4dp">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="2"
          android:textColor="@color/success"
          android:textSize="24sp"
          android:textStyle="bold" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:text="Scheduled"
          android:textColor="@color/text_secondary"
          android:textSize="12sp" />

      </LinearLayout>

    </androidx.cardview.widget.CardView>

  </LinearLayout>

  <!-- Automation List -->
  <ScrollView
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginBottom="80dp"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@id/statsContainer"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingHorizontal="16dp">

      <!-- Automation Title -->
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Your Automations"
        android:textColor="@color/text"
        android:textSize="18sp"
        android:textStyle="bold" />

      <!-- Automation Cards -->
      
      <!-- Morning Routine -->
      <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:padding="20dp"
          android:gravity="center_vertical">

          <!-- Icon -->
          <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_day"
            android:background="@color/solar_active"
            android:padding="12dp"
            app:tint="@color/white" />

          <!-- Text -->
          <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Morning Routine"
              android:textColor="@color/text"
              android:textSize="16sp"
              android:textStyle="bold" />

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:text="7:00 AM - Wake up, lights, blinds, coffee"
              android:textColor="@color/text_secondary"
              android:textSize="14sp" />

          </LinearLayout>

          <!-- Toggle -->
          <Switch
            android:id="@+id/morningRoutineSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />

        </LinearLayout>

      </androidx.cardview.widget.CardView>

      <!-- Evening Routine -->
      <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:padding="20dp"
          android:gravity="center_vertical">

          <!-- Icon -->
          <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_day"
            android:background="@color/info"
            android:padding="12dp"
            app:tint="@color/white" />

          <!-- Text -->
          <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Evening Routine"
              android:textColor="@color/text"
              android:textSize="16sp"
              android:textStyle="bold" />

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:text="6:00 PM - Lights, temperature, security"
              android:textColor="@color/text_secondary"
              android:textSize="14sp" />

          </LinearLayout>

          <!-- Toggle -->
          <Switch
            android:id="@+id/eveningRoutineSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />

        </LinearLayout>

      </androidx.cardview.widget.CardView>

      <!-- Away Mode -->
      <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:padding="20dp"
          android:gravity="center_vertical">

          <!-- Icon -->
          <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_lock_lock"
            android:background="@color/success"
            android:padding="12dp"
            app:tint="@color/white" />

          <!-- Text -->
          <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Away Mode"
              android:textColor="@color/text"
              android:textSize="16sp"
              android:textStyle="bold" />

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:text="When nobody's home - Security, energy saving"
              android:textColor="@color/text_secondary"
              android:textSize="14sp" />

          </LinearLayout>

          <!-- Toggle -->
          <Switch
            android:id="@+id/awayModeSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false" />

        </LinearLayout>

      </androidx.cardview.widget.CardView>

      <!-- Night Mode -->
      <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:padding="20dp"
          android:gravity="center_vertical">

          <!-- Icon -->
          <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_day"
            android:background="@color/warning"
            android:padding="12dp"
            app:tint="@color/white" />

          <!-- Text -->
          <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Night Mode"
              android:textColor="@color/text"
              android:textSize="16sp"
              android:textStyle="bold" />

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:text="11:00 PM - Lights off, security on"
              android:textColor="@color/text_secondary"
              android:textSize="14sp" />

          </LinearLayout>

          <!-- Toggle -->
          <Switch
            android:id="@+id/nightModeSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false" />

        </LinearLayout>

      </androidx.cardview.widget.CardView>

      <!-- Weekend Mode -->
      <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:padding="20dp"
          android:gravity="center_vertical">

          <!-- Icon -->
          <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_preferences"
            android:background="@color/error"
            android:padding="12dp"
            app:tint="@color/white" />

          <!-- Text -->
          <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Weekend Mode"
              android:textColor="@color/text"
              android:textSize="16sp"
              android:textStyle="bold" />

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:text="Sat &amp; Sun - Relaxed schedule"
              android:textColor="@color/text_secondary"
              android:textSize="14sp" />

          </LinearLayout>

          <!-- Toggle -->
          <Switch
            android:id="@+id/weekendModeSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false" />

        </LinearLayout>

      </androidx.cardview.widget.CardView>

    </LinearLayout>

  </ScrollView>

  <!-- Bottom Navigation Bar -->
  <androidx.cardview.widget.CardView
    android:id="@+id/bottomNav"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="12dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:orientation="horizontal"
      android:padding="16dp">

      <!-- Home -->
      <LinearLayout
        android:id="@+id/homeNavButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:src="@drawable/ic_nav_home_exact"
          app:tint="@color/text_secondary" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:text="Home"
          android:textColor="@color/text_secondary"
          android:textSize="12sp" />

      </LinearLayout>

      <!-- Activity -->
      <LinearLayout
        android:id="@+id/activityNavButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:src="@drawable/ic_nav_activity_exact"
          app:tint="@color/text_secondary" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:text="Activity"
          android:textColor="@color/text_secondary"
          android:textSize="12sp" />

      </LinearLayout>

      <!-- Automations -->
      <LinearLayout
        android:id="@+id/automationsNavButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:src="@drawable/ic_nav_automations_exact"
          app:tint="@color/accent" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:text="Auto"
          android:textColor="@color/primary"
          android:textSize="12sp"
          android:textStyle="bold" />

      </LinearLayout>

      <!-- Alerts -->
      <LinearLayout
        android:id="@+id/alertsNavButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:src="@drawable/ic_nav_alerts_exact"
          app:tint="@color/text_secondary" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:text="Alerts"
          android:textColor="@color/text_secondary"
          android:textSize="12sp" />

      </LinearLayout>

      <!-- Security -->
      <LinearLayout
        android:id="@+id/securityNavButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:src="@drawable/ic_nav_security_exact"
          app:tint="@color/text_secondary" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:text="Security"
          android:textColor="@color/text_secondary"
          android:textSize="12sp" />

      </LinearLayout>

      <!-- Energy -->
      <LinearLayout
        android:id="@+id/energyNavButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:src="@drawable/ic_nav_energy_exact"
          app:tint="@color/text_secondary" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:text="Energy"
          android:textColor="@color/text_secondary"
          android:textSize="12sp" />

      </LinearLayout>

    </LinearLayout>

  </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
