<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/background">

  <!-- Scrollable Content -->
  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:fillViewport="true"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@id/bottomNav"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingBottom="16dp">

      <!-- Top Bar -->
      <androidx.cardview.widget.CardView
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:padding="20dp">

          <!-- Title -->
          <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Security"
            android:textColor="@color/text"
            android:textSize="18sp"
            android:textStyle="bold" />

        </LinearLayout>

      </androidx.cardview.widget.CardView>

      <!-- Top Boxes -->
      <LinearLayout
        android:id="@+id/topBoxesContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <!-- First Row - Box 1 and Box 2 -->
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginBottom="24dp">

          <!-- Box 1 - Blue -->
          <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/box_with_border"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="16dp">

              <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_dialog_info"
                app:tint="#4A90E2" />

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="8"
                android:textColor="@color/text"
                android:textSize="20sp"
                android:textStyle="bold" />

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cameras"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            </LinearLayout>

          </androidx.cardview.widget.CardView>

          <!-- Box 2 - Orange -->
          <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/box_with_border"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="16dp">

              <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_dialog_alert"
                app:tint="#F5A623" />

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="3"
                android:textColor="@color/text"
                android:textSize="20sp"
                android:textStyle="bold" />

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            </LinearLayout>

          </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Second Row - Box 3 and Box 4 -->
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <!-- Box 3 - Green -->
          <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/box_with_border"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="16dp">

              <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_preferences"
                app:tint="#7ED321" />

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="24/7"
                android:textColor="@color/text"
                android:textSize="20sp"
                android:textStyle="bold" />

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recording"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            </LinearLayout>

          </androidx.cardview.widget.CardView>

          <!-- Box 4 - Purple -->
          <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/box_with_border"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="16dp">

              <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_info_details"
                app:tint="#9013FE" />

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="100%"
                android:textColor="@color/text"
                android:textSize="20sp"
                android:textStyle="bold" />

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Secure"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            </LinearLayout>

          </androidx.cardview.widget.CardView>

        </LinearLayout>

      </LinearLayout>

      <!-- Security Cameras Section -->
      <LinearLayout
        android:id="@+id/camerasSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <!-- Section Title -->
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Security Cameras"
          android:textColor="@color/text"
          android:textSize="18sp"
          android:textStyle="bold"
          android:layout_marginBottom="16dp" />

        <!-- Camera Item 1 -->
        <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="12dp"
          android:background="@drawable/box_with_border"
          app:cardCornerRadius="16dp"
          app:cardElevation="2dp">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Camera Preview -->
            <View
              android:layout_width="80dp"
              android:layout_height="60dp"
              android:background="#E0E0E0"
              android:layout_marginEnd="16dp" />

            <!-- Camera Info -->
            <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:orientation="vertical">

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Front Door Camera"
                android:textColor="@color/text"
                android:textSize="16sp"
                android:textStyle="bold" />

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Main Entrance"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

              <!-- Status -->
              <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <View
                  android:layout_width="8dp"
                  android:layout_height="8dp"
                  android:background="#7ED321"
                  android:layout_marginEnd="6dp" />

                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Online"
                  android:textColor="#7ED321"
                  android:textSize="12sp" />

              </LinearLayout>

            </LinearLayout>

            <!-- Control Button -->
            <ImageView
              android:layout_width="24dp"
              android:layout_height="24dp"
              android:src="@android:drawable/ic_menu_more"
              app:tint="@color/text_secondary" />

          </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Camera Item 2 -->
        <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="12dp"
          android:background="@drawable/box_with_border"
          app:cardCornerRadius="16dp"
          app:cardElevation="2dp">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Camera Preview -->
            <View
              android:layout_width="80dp"
              android:layout_height="60dp"
              android:background="#E0E0E0"
              android:layout_marginEnd="16dp" />

            <!-- Camera Info -->
            <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:orientation="vertical">

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Backyard Camera"
                android:textColor="@color/text"
                android:textSize="16sp"
                android:textStyle="bold" />

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Garden Area"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

              <!-- Status -->
              <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <View
                  android:layout_width="8dp"
                  android:layout_height="8dp"
                  android:background="#7ED321"
                  android:layout_marginEnd="6dp" />

                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Online"
                  android:textColor="#7ED321"
                  android:textSize="12sp" />

              </LinearLayout>

            </LinearLayout>

            <!-- Control Button -->
            <ImageView
              android:layout_width="24dp"
              android:layout_height="24dp"
              android:src="@android:drawable/ic_menu_more"
              app:tint="@color/text_secondary" />

          </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Camera Item 3 -->
        <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="12dp"
          android:background="@drawable/box_with_border"
          app:cardCornerRadius="16dp"
          app:cardElevation="2dp">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Camera Preview -->
            <View
              android:layout_width="80dp"
              android:layout_height="60dp"
              android:background="#E0E0E0"
              android:layout_marginEnd="16dp" />

            <!-- Camera Info -->
            <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:orientation="vertical">

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Garage Camera"
                android:textColor="@color/text"
                android:textSize="16sp"
                android:textStyle="bold" />

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Parking Area"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

              <!-- Status -->
              <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <View
                  android:layout_width="8dp"
                  android:layout_height="8dp"
                  android:background="#F5A623"
                  android:layout_marginEnd="6dp" />

                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Recording"
                  android:textColor="#F5A623"
                  android:textSize="12sp" />

              </LinearLayout>

            </LinearLayout>

            <!-- Control Button -->
            <ImageView
              android:layout_width="24dp"
              android:layout_height="24dp"
              android:src="@android:drawable/ic_menu_more"
              app:tint="@color/text_secondary" />

          </LinearLayout>

        </androidx.cardview.widget.CardView>

      </LinearLayout>

      <!-- Security Activity Section -->
      <LinearLayout
        android:id="@+id/activitySection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <!-- Section Title -->
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Recent Activity"
          android:textColor="@color/text"
          android:textSize="18sp"
          android:textStyle="bold"
          android:layout_marginBottom="16dp" />

        <!-- Activity Item 1 -->
        <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="12dp"
          android:background="@drawable/box_with_border"
          app:cardCornerRadius="16dp"
          app:cardElevation="2dp">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Alert Icon -->
            <View
              android:layout_width="12dp"
              android:layout_height="12dp"
              android:background="#F5A623"
              android:layout_marginEnd="16dp" />

            <!-- Activity Content -->
            <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:orientation="vertical">

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Motion Detected - Front Door"
                android:textColor="@color/text"
                android:textSize="16sp"
                android:textStyle="bold" />

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Person detected at main entrance"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            </LinearLayout>

            <!-- Time -->
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="2 min ago"
              android:textColor="@color/text_secondary"
              android:textSize="12sp" />

          </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Activity Item 2 -->
        <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="12dp"
          android:background="@drawable/box_with_border"
          app:cardCornerRadius="16dp"
          app:cardElevation="2dp">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Alert Icon -->
            <View
              android:layout_width="12dp"
              android:layout_height="12dp"
              android:background="#7ED321"
              android:layout_marginEnd="16dp" />

            <!-- Activity Content -->
            <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:orientation="vertical">

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Door Locked - Garage"
                android:textColor="@color/text"
                android:textSize="16sp"
                android:textStyle="bold" />

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Garage door automatically locked"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            </LinearLayout>

            <!-- Time -->
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="15 min ago"
              android:textColor="@color/text_secondary"
              android:textSize="12sp" />

          </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Activity Item 3 -->
        <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="12dp"
          android:background="@drawable/box_with_border"
          app:cardCornerRadius="16dp"
          app:cardElevation="2dp">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Alert Icon -->
            <View
              android:layout_width="12dp"
              android:layout_height="12dp"
              android:background="#4A90E2"
              android:layout_marginEnd="16dp" />

            <!-- Activity Content -->
            <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:orientation="vertical">

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="System Check - All Cameras"
                android:textColor="@color/text"
                android:textSize="16sp"
                android:textStyle="bold" />

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="All security cameras operational"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            </LinearLayout>

            <!-- Time -->
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="1 hour ago"
              android:textColor="@color/text_secondary"
              android:textSize="12sp" />

          </LinearLayout>

        </androidx.cardview.widget.CardView>

      </LinearLayout>

      <!-- Security Controls Section -->
      <LinearLayout
        android:id="@+id/controlsSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <!-- Section Title -->
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Quick Controls"
          android:textColor="@color/text"
          android:textSize="18sp"
          android:textStyle="bold"
          android:layout_marginBottom="16dp" />

        <!-- Control Buttons Grid -->
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginBottom="16dp">

          <!-- Lock All Button -->
          <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/box_with_border"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="12dp">

              <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_lock_lock"
                app:tint="#7ED321" />

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Lock All"
                android:textColor="@color/text"
                android:textSize="12sp"
                android:textStyle="bold" />

            </LinearLayout>

          </androidx.cardview.widget.CardView>

          <!-- Unlock All Button -->
          <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/box_with_border"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="12dp">

              <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_lock_open"
                app:tint="#F5A623" />

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Unlock All"
                android:textColor="@color/text"
                android:textSize="12sp"
                android:textStyle="bold" />

            </LinearLayout>

          </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Second Row of Controls -->
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <!-- Arm System Button -->
          <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/box_with_border"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="12dp">

              <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_menu_secure"
                app:tint="#4A90E2" />

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Arm System"
                android:textColor="@color/text"
                android:textSize="12sp"
                android:textStyle="bold" />

            </LinearLayout>

          </androidx.cardview.widget.CardView>

          <!-- Disarm System Button -->
          <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/box_with_border"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="12dp">

              <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                app:tint="#9013FE" />

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Disarm"
                android:textColor="@color/text"
