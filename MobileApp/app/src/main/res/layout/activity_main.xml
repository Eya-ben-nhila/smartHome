<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/gradient_background">

  <!-- Status Bar Background -->
  <View
    android:id="@+id/statusBarBackground"
    android:layout_width="match_parent"
    android:layout_height="24dp"
    android:background="@android:color/transparent"
    app:layout_constraintTop_toTopOf="parent" />

  <!-- Top Bar with Language and Profile -->
  <LinearLayout
    android:id="@+id/topBar"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="48dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/statusBarBackground">

    <!-- Language Switcher -->
    <ImageButton
      android:id="@+id/btnLanguage"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:background="@drawable/circle_background_white"
      android:padding="8dp"
      android:src="@drawable/ic_language"
      app:tint="@color/text" />

    <!-- Spacer -->
    <View
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:layout_weight="1" />

    <!-- User Profile -->
    <LinearLayout
      android:id="@+id/userProfile"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/circle_background_white"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:padding="6dp">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:text="Welcome"
        android:textColor="@color/text_secondary"
        android:textSize="10sp" />

      <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/circle_background_light"
        android:padding="5dp"
        android:src="@android:drawable/ic_menu_myplaces"
        app:tint="@color/text" />

    </LinearLayout>

  </LinearLayout>

  <!-- SmartSolar Logo with Animation -->
  <LinearLayout
    android:id="@+id/logoContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="32dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/topBar">

    <TextView
      android:id="@+id/tvSmart"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:shadowColor="@color/black"
      android:shadowDx="2"
      android:shadowDy="2"
      android:shadowRadius="4"
      android:text="Smart"
      android:textColor="@color/white"
      android:textSize="52sp"
      android:textStyle="bold" />

    <TextView
      android:id="@+id/tvSolar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:shadowColor="@color/black"
      android:shadowDx="2"
      android:shadowDy="2"
      android:shadowRadius="4"
      android:text="Solar"
      android:textColor="#667bab"
      android:textSize="52sp"
      android:textStyle="bold" />

  </LinearLayout>

  <!-- Live Stats Mini Cards -->
  <LinearLayout
    android:id="@+id/miniStats"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="16dp"
    android:orientation="horizontal"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/logoContainer">

    <!-- Generation -->
    <androidx.cardview.widget.CardView
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_weight="1"
      app:cardBackgroundColor="@color/white"
      app:cardCornerRadius="12dp"
      app:cardElevation="4dp" />

    <!-- Consumption -->
    <androidx.cardview.widget.CardView
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_weight="1"
      app:cardBackgroundColor="@color/white"
      app:cardCornerRadius="12dp"
      app:cardElevation="4dp" />

  </LinearLayout>

  <!-- House Image with Overlay -->
  <androidx.cardview.widget.CardView
    android:id="@+id/houseCard"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="24dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:layout_constraintDimensionRatio="16:9"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/miniStats">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <!-- House Image -->
      <ImageView
        android:id="@+id/ivHouse"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/house_with_solar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

      <!-- Floating Badge -->

    </androidx.constraintlayout.widget.ConstraintLayout>

  </androidx.cardview.widget.CardView>

  <!-- Welcome Text -->
  <TextView
    android:id="@+id/tvHeading"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="32dp"
    android:gravity="center"
    android:text="Welcome to Smart Solar"
    android:textColor="@color/white"
    android:textSize="20sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/houseCard" />

  <!-- Description -->
  <TextView
    android:id="@+id/tvDescription"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="8dp"
    android:gravity="center"
    android:text="Your intelligent home energy management system"
    android:textColor="@color/white"
    android:textSize="13sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tvHeading" />

  <!-- Quick Actions -->
  <LinearLayout
    android:id="@+id/quickActions"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="16dp"
    android:orientation="horizontal"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tvDescription">

    <!-- Dashboard Button -->
    <androidx.cardview.widget.CardView
      android:id="@+id/dashboardButton"
      android:layout_width="0dp"
      android:layout_height="44dp"
      android:layout_marginEnd="6dp"
      android:layout_weight="1"
      app:cardBackgroundColor="@color/white"
      app:cardCornerRadius="22dp"
      app:cardElevation="4dp">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
          android:layout_width="18dp"
          android:layout_height="18dp"
          android:src="@drawable/ic_nav_home_exact"
          app:tint="@color/accent" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="6dp"
          android:text="Dashboard"
          android:textColor="@color/accent"
          android:textSize="13sp"
          android:textStyle="bold" />

      </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Analytics Button -->
    <androidx.cardview.widget.CardView
      android:id="@+id/analyticsButton"
      android:layout_width="0dp"
      android:layout_height="44dp"
      android:layout_marginStart="6dp"
      android:layout_weight="1"
      app:cardBackgroundColor="@color/accent"
      app:cardCornerRadius="22dp"
      app:cardElevation="4dp">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
          android:layout_width="18dp"
          android:layout_height="18dp"
          android:src="@android:drawable/ic_menu_preferences"
          app:tint="@color/white" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="6dp"
          android:text="Analytics"
          android:textColor="@color/white"
          android:textSize="13sp"
          android:textStyle="bold" />

      </LinearLayout>

    </androidx.cardview.widget.CardView>

  </LinearLayout>

  <!-- Bottom Navigation Hint -->
  <LinearLayout
    android:id="@+id/bottomHint"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <ImageView
      android:id="@+id/ivSwipeIndicator"
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:src="@drawable/ic_swipe_down"
      app:tint="@color/white" />

    <TextView
      android:id="@+id/tvSwipeHint"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      android:text="Swipe to explore"
      android:textColor="@color/white"
      android:textSize="12sp" />

  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
