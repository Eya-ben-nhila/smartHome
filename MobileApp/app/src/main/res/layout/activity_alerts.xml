<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/background">

  <!-- Scrollable Content -->
  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:nestedScrollingEnabled="true"
    android:scrollbars="none">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingBottom="80dp">

      <!-- Top Bar -->
      <androidx.cardview.widget.CardView
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:padding="20dp">

          <!-- Title -->
          <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alerts"
            android:textColor="@color/text"
            android:textSize="24sp"
            android:textStyle="bold" />

          <!-- Spacer -->
          <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

          <!-- Search Bar -->

          <!-- Filter Button -->
          <LinearLayout
            android:id="@+id/filterButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/circle_background_light"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginStart="16dp">

            <ImageView
              android:layout_width="16dp"
              android:layout_height="16dp"
              android:src="@android:drawable/ic_menu_sort_by_size"
              app:tint="@color/text_secondary" />

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="4dp"
              android:text="Filter"
              android:textColor="@color/text_secondary"
              android:textSize="12sp" />

          </LinearLayout>

        </LinearLayout>

      </androidx.cardview.widget.CardView>

      <!-- Alert Categories -->

      <!-- Top Boxes -->
      <LinearLayout
        android:id="@+id/topBoxesContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- First Row - Box 1 and Box 2 -->
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginBottom="8dp">

          <!-- Box 1 - Blue -->
          <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="#4A90E2"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#D9E2FF"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="12dp">

              <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_dialog_info"
                app:tint="#0040A3" />

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="12"
                android:textColor="#0040A3"
                android:textSize="16sp"
                android:textStyle="bold" />

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textColor="#0040A3"
                android:textSize="14sp" />

            </LinearLayout>

          </androidx.cardview.widget.CardView>

          <!-- Box 2 - Orange -->
          <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            app:cardBackgroundColor="#F5A623"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FFE8D6"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="12dp">

              <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_dialog_alert"
                app:tint="#802A00" />

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="3"
                android:textColor="#802A00"
                android:textSize="16sp"
                android:textStyle="bold" />

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Critical"
                android:textColor="#802A00"
                android:textSize="14sp" />

            </LinearLayout>

          </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Second Row - Box 3 and Box 4 -->
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <!-- Box 3 - Green -->
          <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="#7ED321"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FFE8D6"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="12dp">

              <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_preferences"
                app:tint="#802A00" />

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="5"
                android:textColor="#802A00"
                android:textSize="16sp"
                android:textStyle="bold" />

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Warning"
                android:textColor="#802A00"
                android:textSize="14sp" />

            </LinearLayout>

          </androidx.cardview.widget.CardView>

          <!-- Box 4 - Purple -->
          <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            app:cardBackgroundColor="#9013FE"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#D9E2FF"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="12dp">

              <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_info_details"
                app:tint="#0040A3" />

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="4"
                android:textColor="#0040A3"
                android:textSize="16sp"
                android:textStyle="bold" />

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Info"
                android:textColor="#0040A3"
                android:textSize="14sp" />

            </LinearLayout>

          </androidx.cardview.widget.CardView>

        </LinearLayout>

      </LinearLayout>

      <!-- Circle Chart -->
      <androidx.cardview.widget.CardView
        android:id="@+id/chartCard"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/topBoxesContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center"
          android:orientation="vertical"
          android:padding="20dp">

          <!-- Chart Title -->
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alert Distribution"
            android:textColor="@color/text"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

          <!-- Circle Chart Container -->
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Circle Chart -->
            <View
              android:id="@+id/circleChart"
              android:layout_width="120dp"
              android:layout_height="120dp"
              android:background="#802A00" />

            <!-- Legend -->
            <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:layout_marginStart="20dp"
              android:orientation="vertical">

              <!-- Critical -->
              <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <View
                  android:layout_width="16dp"
                  android:layout_height="16dp"
                  android:layout_marginEnd="8dp"
                  android:background="#802A00" />

                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Critical (25%)"
                  android:textColor="@color/text"
                  android:textSize="14sp" />

              </LinearLayout>

              <!-- Warning -->
              <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <View
                  android:layout_width="16dp"
                  android:layout_height="16dp"
                  android:layout_marginEnd="8dp"
                  android:background="#564500" />

                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Warning (42%)"
                  android:textColor="@color/text"
                  android:textSize="14sp" />

              </LinearLayout>

              <!-- Info -->
              <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                  android:layout_width="16dp"
                  android:layout_height="16dp"
                  android:layout_marginEnd="8dp"
                  android:background="#0040A3" />

                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Info (33%)"
                  android:textColor="@color/text"
                  android:textSize="14sp" />

              </LinearLayout>

            </LinearLayout>

          </LinearLayout>

        </LinearLayout>

      </androidx.cardview.widget.CardView>

      <!-- Alerts Section -->
      <LinearLayout
        android:id="@+id/alertsSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/chartCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Section Title -->
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Recent Alerts"
          android:textColor="@color/text"
          android:textSize="18sp"
          android:textStyle="bold"
          android:layout_marginBottom="16dp" />

        <!-- Alert Item 1 -->
        <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="12dp"
          app:cardBackgroundColor="@color/white"
          app:cardCornerRadius="12dp"
          app:cardElevation="2dp">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Alert Icon -->
            <View
              android:layout_width="12dp"
              android:layout_height="12dp"
              android:background="#802A00"
              android:layout_marginEnd="16dp" />

            <!-- Alert Content -->
            <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:orientation="vertical">

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High Temperature Alert"
                android:textColor="@color/text"
                android:textSize="16sp"
                android:textStyle="bold" />

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Kitchen temperature exceeded 30Â°C"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            </LinearLayout>

            <!-- Time -->
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="2h ago"
              android:textColor="@color/text_secondary"
              android:textSize="12sp" />

          </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Alert Item 2 -->
        <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="12dp"
          app:cardBackgroundColor="@color/white"
          app:cardCornerRadius="12dp"
          app:cardElevation="2dp">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Alert Icon -->
            <View
              android:layout_width="12dp"
              android:layout_height="12dp"
              android:background="#564500"
              android:layout_marginEnd="16dp" />

            <!-- Alert Content -->
            <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:orientation="vertical">

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Motion Detected"
                android:textColor="@color/text"
                android:textSize="16sp"
                android:textStyle="bold" />

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Movement detected in living room"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            </LinearLayout>

            <!-- Time -->
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="5h ago"
              android:textColor="@color/text_secondary"
              android:textSize="12sp" />

          </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Alert Item 3 -->
        <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="12dp"
          app:cardBackgroundColor="@color/white"
          app:cardCornerRadius="12dp"
          app:cardElevation="2dp">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Alert Icon -->
            <View
              android:layout_width="12dp"
              android:layout_height="12dp"
              android:background="#0040A3"
              android:layout_marginEnd="16dp" />

            <!-- Alert Content -->
            <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:orientation="vertical">

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="System Update"
                android:textColor="@color/text"
                android:textSize="16sp"
                android:textStyle="bold" />

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="New system update available"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            </LinearLayout>

            <!-- Time -->
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="1d ago"
              android:textColor="@color/text_secondary"
              android:textSize="12sp" />

          </LinearLayout>

        </androidx.cardview.widget.CardView>

      </LinearLayout>

      <!-- Alerts List -->

      <!-- Bottom Navigation -->
      <androidx.cardview.widget.CardView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center"
          android:orientation="horizontal"
          android:padding="16dp">

          <!-- Home -->
          <LinearLayout
            android:id="@+id/homeNavButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
              android:layout_width="24dp"
              android:layout_height="24dp"
              android:src="@drawable/ic_nav_home_exact"
              app:tint="@color/text_secondary" />

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:text="Home"
              android:textColor="@color/text_secondary"
              android:textSize="12sp" />

          </LinearLayout>

          <!-- Activity -->
          <LinearLayout
            android:id="@+id/activityNavButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
              android:layout_width="24dp"
              android:layout_height="24dp"
              android:src="@drawable/ic_nav_activity_exact"
              app:tint="@color/text_secondary" />

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:text="Activity"
              android:textColor="@color/text_secondary"
              android:textSize="12sp" />

          </LinearLayout>

          <!-- Automations -->
          <LinearLayout
            android:id="@+id/automationsNavButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
              android:layout_width="24dp"
              android:layout_height="24dp"
              android:src="@drawable/ic_nav_automations_exact"
              app:tint="@color/text_secondary" />

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:text="Auto"
              android:textColor="@color/text_secondary"
              android:textSize="12sp" />

          </LinearLayout>

          <!-- Alerts (Active) -->
          <LinearLayout
            android:id="@+id/alertsNavButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
              android:layout_width="24dp"
              android:layout_height="24dp"
              android:src="@drawable/ic_nav_alerts_exact"
              app:tint="@color/accent" />

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:text="Alerts"
              android:textColor="@color/accent"
              android:textSize="12sp"
              android:textStyle="bold" />

          </LinearLayout>

          <!-- Security -->
          <LinearLayout
            android:id="@+id/securityNavButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
              android:layout_width="24dp"
              android:layout_height="24dp"
              android:src="@drawable/ic_nav_security_exact"
              app:tint="@color/text_secondary" />

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:text="Security"
              android:textColor="@color/text_secondary"
              android:textSize="12sp" />

          </LinearLayout>

          <!-- Energy -->
          <LinearLayout
            android:id="@+id/energyNavButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
              android:layout_width="24dp"
              android:layout_height="24dp"
              android:src="@drawable/ic_nav_energy_exact"
              app:tint="@color/text_secondary" />

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:text="Energy"
              android:textColor="@color/text_secondary"
              android:textSize="12sp" />

          </LinearLayout>

        </LinearLayout>

      </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

  </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
